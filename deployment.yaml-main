apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app-deployment-prod
  labels:
    app: my-app
spec:
  replicas: 3  
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: my-app
    spec:
      containers:
      - name: my-app-container
        image: docker.io/ahmedmaher07/ivolve:latest 
        ports:
        - containerPort: 8081  
